---
import BasicLayout from "../layouts/BasicLayout.astro";
import Title from "../components/Title.astro";
import Socials from "../components/Socials.astro";
import List from "../components/List.astro";
import { getCollection } from "astro:content";

let socials = [
	{title: 'Github', link:'https://github.com/lsilberstein'},
	{title: 'LinkedIn', link:'https://www.linkedin.com/in/linussilberstein'},
	{title: 'contact(at)linussilberstein(dot)de', notclickable: true},
	{title: 'goodreads', link:'https://www.goodreads.com/user/show/149550749-linus-silberstein'}
]

const allProjects = await getCollection('project');
const allJobs = await getCollection('job');
const allBlogEntries = await getCollection('post');
---

<BasicLayout title="Home" marquee>
	<Title title="Linus Silberstein" description="Dev from Germany"/>
	<Socials socials={socials}/>
	<List title="Projects" items={allProjects} type="projects"/>
	<List title="Jobs" items={allJobs} type="jobs"/>
	<List title="Post" items={allBlogEntries} type="posts"/>
</BasicLayout>
