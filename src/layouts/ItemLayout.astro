---
import Badges from "../components/Badges.astro";
import Title from "../components/Title.astro";
import BasicLayout from "./BasicLayout.astro";

const { frontmatter } = Astro.props;
---

<BasicLayout title=`${frontmatter.title}`>
    <Title
        title={frontmatter.title}
    />
    <Badges badges={frontmatter.tags} />
    <article
        class="mt-8 prose prose-h2:font-serif prose-h2:text-2xl prose-headings:text-dark dark:prose-headings:text-white text-dark dark:text-white
        prose-a:text-dark dark:prose-a:text-white"
    >
        <slot />
    </article>
</BasicLayout>
