---
import Badges from "../components/Badges.astro";
import Date from "../components/Date.astro";
import Title from "../components/Title.astro";
import BasicLayout from "./BasicLayout.astro";

const { frontmatter } = Astro.props;
---

<BasicLayout title=`${frontmatter.title}`>
    <Title title={frontmatter.title} smalltitle={frontmatter.desc} />
    {frontmatter.date && <Date date={frontmatter.date} />}
    <Badges badges={frontmatter.tags} />
    <article
        class="mt-8 prose dark:text-white dark:prose-headings:text-white dark:prose-p:text-white dark:prose-a:text-white dark:prose-li:text-white md:prose-h1:text-4xl prose-h1:text-2xl font-serif prose-headings:font-mono"
    >
        <slot />
    </article>
</BasicLayout>
