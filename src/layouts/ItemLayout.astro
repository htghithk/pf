---
import Badges from "../components/Badges.astro";
import Title from "../components/Title.astro";
import BasicLayout from "./BasicLayout.astro";

const { frontmatter } = Astro.props;
---

<BasicLayout title=`${frontmatter.title}`>
    <Title
        title={frontmatter.title}
        description=`${frontmatter.description} | ${frontmatter.date.toDateString()}`
    />
    <Badges badges={frontmatter.tags} />
    <article
        class="mt-8 prose prose-h2:font-serif prose-h2:text-2xl text-black dark:prose-p:text-white dark:prose-h2:text-white
        prose-a:text-accent prose-a:visited:text-secondary
        prose-img:rounded-xl"
    >
        <slot />
    </article>
</BasicLayout>
