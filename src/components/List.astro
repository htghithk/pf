---
import Badge from "./Badge.astro";

const { items, type, title } = Astro.props;
---

<section class="items-start mt-8">
    {title && <Badge href={`/tags/${title}`} title={title}/>}
    <ul class="list-disc list-inside">
        {
            items.map((item) => (
                <li>
                    <a
                        href={`/${type}/${item.slug}`}
                        class="hover:underline text-accent vistited:text-secondary"
                    >
                        {item.data.title}
                    </a>
                </li>
            ))
        }
    </ul>
</section>
